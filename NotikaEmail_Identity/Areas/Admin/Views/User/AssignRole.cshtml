@model List<AssignRoleViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Rol Kutucukları İçin Özel Tasarım */
    .role-box {
        background-color: #f8f9fa;
        border: 1px solid #e9ecef;
        border-radius: 10px;
        padding: 15px 20px;
        transition: all 0.3s ease;
        cursor: pointer;
        display: flex;
        align-items: center;
    }

        .role-box:hover {
            background-color: #f1f3f5;
            border-color: #dee2e6;
            box-shadow: 0 4px 10px rgba(0,0,0,0.03);
            transform: translateY(-2px);
        }

        /* Checkbox'ı biraz büyütelim */
        .role-box .form-check-input {
            width: 1.5em;
            height: 1.5em;
            margin-top: 0;
            cursor: pointer;
        }

        .role-box .form-check-label {
            cursor: pointer;
            user-select: none; /* Metni yanlışlıkla seçmeyi engeller */
            font-weight: 500;
            margin-left: 10px;
            font-size: 16px;
            color: #333;
            width: 100%;
        }
</style>

<div class="main-content-container overflow-hidden">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4 mt-1">
        <h3 class="mb-0">Rol Atama İşlemi</h3>

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb align-items-center mb-0 lh-1">
                <li class="breadcrumb-item">
                    <a href="/Admin/User/Index" class="d-flex align-items-center text-decoration-none">
                        <i class="ri-group-line fs-15 text-primary me-1"></i>
                        <span class="text-body fs-14 hover">Kullanıcılar</span>
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <span class="text-secondary">Rol Ata</span>
                </li>
            </ol>
        </nav>
    </div>

    <div class="card bg-white rounded-10 border border-white mb-4">
        <div class="card-body p-4">

            <div class="mb-4 pb-3 border-bottom">
                <h4 class="fs-18 mb-1">Kullanıcı: <span class="text-primary fw-bold">@ViewBag.UserName</span></h4>
                <p class="fs-14 text-muted mb-0">Lütfen kullanıcının sahip olmasını istediğiniz rolleri aşağıdan seçiniz.</p>
            </div>

            <form method="post">
                <div class="row mb-4">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 mb-3">

                            <label class="role-box m-0 w-100">

                                <input type="hidden" asp-for="@Model[i].RoleId" />
                                <input type="hidden" asp-for="@Model[i].UserId" />
                                <input type="hidden" asp-for="@Model[i].RoleName" />

                                <input type="checkbox" asp-for="@Model[i].RoleExists" class="form-check-input" />
                                <span class="form-check-label">@Model[i].RoleName</span>

                            </label>

                        </div>
                    }
                </div>

                <div class="d-flex gap-3 mt-2">
                    <button type="submit" class="btn btn-primary px-4 py-2 d-flex align-items-center gap-2 fw-medium">
                        <span class="material-symbols-outlined fs-18">save</span> Değişiklikleri Kaydet
                    </button>
                    <a href="/Admin/User/Index" class="btn btn-light border px-4 py-2 d-flex align-items-center gap-2 fw-medium text-dark">
                        <span class="material-symbols-outlined fs-18">cancel</span> İptal Et
                    </a>
                </div>

            </form>

        </div>
    </div>
</div>