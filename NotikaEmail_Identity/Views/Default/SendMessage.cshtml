@model SendMessageViewModel

@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/WebUI/Index.cshtml";
}

<style>
    /* Genel Kart Tasarımı */
    .email-card {
        border-radius: 12px;
        border: none;
        background: #fff;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        padding: 30px;
    }

    .email-card-header {
        border-bottom: 1px solid #f0f0f0;
        margin-bottom: 25px;
        padding-bottom: 15px;
    }

        .email-card-header h2 {
            margin: 0;
            color: #2c3e50;
            font-size: 22px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 10px;
        }

    /* Modern Input Alanları */
    .form-group label {
        font-weight: 500;
        color: #6c757d;
        margin-bottom: 8px;
        display: block;
        font-size: 14px;
    }

    .modern-input {
        border: 1px solid #e0e4e8;
        border-radius: 8px;
        padding: 12px 15px;
        box-shadow: none;
        transition: all 0.3s ease;
        background-color: #f8f9fa;
        width: 100%;
        color: #333;
    }

        .modern-input:focus {
            border-color: #667eea;
            background-color: #fff;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.15);
            outline: none;
        }

    .custom-select {
        height: 48px;
        cursor: pointer;
    }

    /* Gmail Tarzı Dosya Ekleme Alanı */
    .attachment-section {
        display: flex;
        align-items: center;
        gap: 15px;
        padding-top: 15px;
        border-top: 1px solid #f0f0f0;
        margin-top: 10px;
    }

    .attachment-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: transparent;
        color: #5f6368;
        cursor: pointer;
        transition: background-color 0.2s;
        margin: 0;
    }

        .attachment-btn:hover {
            background-color: #f1f3f4;
            color: #202124;
        }

    /* Seçilen Dosya İsmi Baloncuğu */
    .file-name-badge {
        display: none; /* Dosya seçilene kadar gizli */
        align-items: center;
        gap: 8px;
        background: #f1f3f4;
        color: #3c4043;
        padding: 6px 14px;
        border-radius: 16px;
        font-size: 13px;
        font-weight: 500;
        border: 1px solid #e8eaed;
    }

    /* Gönder Butonu */
    .btn-send {
        background: #667eea;
        border: none;
        color: white;
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 600;
        font-size: 15px;
        transition: 0.3s;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn-send:hover {
            background: #5a6cd6;
            color: white;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        }
</style>

<div class="inbox-area">
    <div class="container">
        <div class="row">

            @await Component.InvokeAsync("_MessageMenuSidebarComponentPartial")

            <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12">
                <div class="email-card sm-res-mg-t-30">

                    <div class="email-card-header">
                        <h2><i class="notika-icon notika-edit"></i> Yeni Mesaj Gönder</h2>
                    </div>

                    <div class="email-card-body">
                        <form method="post" enctype="multipart/form-data">

                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-12">
                                    <div class="form-group">
                                        <label>Alıcı E-posta Adresi</label>
                                        <input type="email" asp-for="ReceiverEmail" class="form-control modern-input" name="ReceiverEmail" placeholder="ornek@email.com" required />
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-3">
                                <div class="col-lg-6 col-md-6 col-sm-12">
                                    <div class="form-group">
                                        <label>Kategori</label>
                                        <select asp-for="MessageCategoryId" asp-items="@ViewBag.categories" class="form-control modern-input custom-select" required>
                                            <option value="" selected disabled>Kategori Seçiniz...</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-6 col-sm-12">
                                    <div class="form-group">
                                        <label>Konu</label>
                                        <input type="text" class="form-control modern-input" asp-for="Subject" placeholder="Mesajınızın konusu" required />
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-3">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Mesajınız</label>
                                        <textarea class="form-control modern-input" asp-for="MessageDetail" rows="8" placeholder="Mesajınızı buraya yazın..." required></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="attachment-section d-flex justify-content-between align-items-center mt-4">

                                <div class="d-flex align-items-center">
                                    <label for="file-upload" class="attachment-btn" title="Dosya Ekle">
                                        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M21.44 11.05l-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66l-9.2 9.19a2 2 0 0 1-2.83-2.83l8.49-8.48"></path>
                                        </svg>
                                    </label>
                                    <input id="file-upload" type="file" name="AttachedFile" style="display: none;" onchange="showFileName(this)" />

                                    <span id="file-name-display" class="file-name-badge">
                                        <i class="notika-icon notika-file"></i> <span id="file-name-text"></span>
                                    </span>
                                </div>

                                <button type="submit" class="btn btn-send waves-effect">
                                    Mesajı Gönder <i class="notika-icon notika-right-arrow"></i>
                                </button>

                            </div>

                            <span class="text-danger d-block mt-2">@Html.ValidationSummary()</span>

                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function showFileName(input) {
        const displayBadge = document.getElementById('file-name-display');
        const textSpan = document.getElementById('file-name-text');

        if (input.files && input.files.length > 0) {
            textSpan.textContent = input.files[0].name;
            displayBadge.style.display = 'inline-flex'; // Dosya seçilince balonu göster
        } else {
            displayBadge.style.display = 'none'; // İptal edilirse gizle
        }
    }
</script>
















