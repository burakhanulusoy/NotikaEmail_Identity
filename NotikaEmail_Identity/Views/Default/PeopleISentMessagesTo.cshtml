@using NotikaEmail_Identity.Entities
@model List<ResultMessageDto>

@{
    Layout = null;
}
<!DOCTYPE html>

<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Notika - Son Kişiler</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#13ec13",
                        "primary-dark": "#0fae0f",
                        "primary-light": "#e0fbe0",
                        "background-light": "#f6f8f6",
                        "background-dark": "#102210",
                        "surface-light": "#ffffff",
                        "surface-dark": "#1a331a",
                        "text-main": "#111811",
                        "text-muted": "#618961",
                    },
                    fontFamily: {
                        "display": ["Inter", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "2xl": "1rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }

            .material-symbols-outlined.fill {
                font-variation-settings: 'FILL' 1, 'wght' 400, 'GRAD' 0, 'opsz' 24;
            }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark text-text-main dark:text-white min-h-screen flex flex-col md:flex-row overflow-hidden">
    <aside class="w-full md:w-64 bg-surface-light dark:bg-surface-dark border-r border-gray-200 dark:border-gray-800 flex flex-col justify-between h-screen shrink-0 z-20">
        <div class="flex flex-col gap-6 p-6">
            <div class="flex items-center gap-3">
                <div class="bg-center bg-no-repeat bg-cover rounded-full h-10 w-10 ring-2 ring-primary/20" style='background-image: url("@ViewBag.image");'></div>
                <div class="flex flex-col">
                    <h1 class="text-text-main dark:text-white text-base font-bold leading-none">Notika</h1>
                    <p class="text-text-muted dark:text-gray-400 text-xs font-medium uppercase tracking-wide mt-1">Ücretsiz Plan</p>
                </div>
            </div>
            <a href="/Default/SendMessage" class="flex w-full cursor-pointer items-center justify-center gap-2 rounded-xl h-12 px-4 bg-primary hover:bg-primary-dark transition-colors text-text-main text-sm font-bold shadow-sm shadow-primary/30">
                <span class="material-symbols-outlined">edit</span>
                <span>Mesaj Gönder</span>
            </a>
            <nav class="flex flex-col gap-1">
                <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-text-main dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors group" href="/Default/Inbox">
                    <span class="material-symbols-outlined text-gray-500 group-hover:text-primary transition-colors">mail</span>
                    <span class="text-sm font-medium">Gelen Kutusu</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-text-main dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors group" href="/Default/SendBox">
                    <span class="material-symbols-outlined text-gray-500 group-hover:text-primary transition-colors">send</span>
                    <span class="text-sm font-medium">Giden Kutusu</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-text-main dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors group" href="#">
                    <span class="material-symbols-outlined text-gray-500 group-hover:text-primary transition-colors">draft</span>
                    <span class="text-sm font-medium">Taslaklarım</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg bg-primary-light/50 dark:bg-primary/10 text-primary-dark dark:text-primary font-medium" href="#">
                    <span class="material-symbols-outlined fill">group</span>
                    <span class="text-sm">İletişimde Olduklarım</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-text-main dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors group" href="/Profile/Index">
                    <span class="material-symbols-outlined text-gray-500 group-hover:text-primary transition-colors">settings</span>
                    <span class="text-sm font-medium">Profil Ayarları</span>
                </a>
            </nav>
        </div>
        <div class="p-6 border-t border-gray-100 dark:border-gray-800">
            <a href="/Default/Logout" class="flex items-center gap-3 w-full px-3 py-2 text-text-muted hover:text-text-main dark:hover:text-white transition-colors text-sm font-medium">
                <span class="material-symbols-outlined">logout</span>
                <span>Güvenli Çıkış</span>
            </a>
        </div>
    </aside>

    <main class="flex-1 flex flex-col h-screen overflow-hidden relative">
        <header class="h-20 shrink-0 px-6 py-4 flex items-center justify-between bg-surface-light/80 dark:bg-surface-dark/80 backdrop-blur-sm sticky top-0 z-10">
            <div class="flex-1 max-w-2xl">
                <label class="flex items-center w-full h-12 bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 focus-within:ring-2 focus-within:ring-primary/50 transition-all">
                    <div class="pl-4 pr-3 text-text-muted">
                        <span class="material-symbols-outlined">search</span>
                    </div>
                    <input class="w-full bg-transparent border-none text-text-main dark:text-white placeholder-text-muted focus:ring-0 text-base" placeholder="Kişilerde veya mesajlarda ara..." type="text" />
                </label>
            </div>
            <div class="ml-4 flex items-center gap-4">
                <button class="p-2 rounded-full hover:bg-gray-100 dark:hover:bg-gray-800 text-text-muted transition-colors relative">
                    <span class="material-symbols-outlined">notifications</span>
                    <span class="absolute top-2 right-2 w-2 h-2 bg-red-500 rounded-full"></span>
                </button>
                <div class="h-8 w-px bg-gray-200 dark:bg-gray-700"></div>
                <div class="text-right hidden sm:block">
                    <p class="text-sm font-bold text-text-main dark:text-white">@ViewBag.name</p>
                    <p class="text-xs text-text-muted">@ViewBag.job</p>
                </div>
            </div>
        </header>

        <div class="flex-1 overflow-y-auto p-6 md:p-10 pb-20">
            <div class="mb-10 flex flex-wrap items-end justify-between gap-4">
                <div class="flex flex-col gap-2">
                    <h2 class="text-3xl md:text-4xl font-black tracking-tight text-text-main dark:text-white">Mesajlaştığım Kişiler</h2>
                    <p class="text-text-muted dark:text-gray-400 text-lg">Sık sık etkileşim kurduğunuz kişiler burada listelenir.</p>
                </div>
                <div class="flex gap-2">
                    <button class="p-2 rounded-lg bg-white dark:bg-gray-800 shadow-sm border border-gray-100 dark:border-gray-700 text-text-main dark:text-white hover:border-primary transition-colors">
                        <span class="material-symbols-outlined">grid_view</span>
                    </button>
                    <button class="p-2 rounded-lg bg-transparent text-text-muted hover:bg-white dark:hover:bg-gray-800 hover:text-text-main transition-colors">
                        <span class="material-symbols-outlined">list</span>
                    </button>
                </div>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                @foreach (var user in Model)
                {
                    <div class="group relative bg-white dark:bg-surface-dark rounded-2xl p-6 shadow-sm border border-gray-100 dark:border-gray-800 hover:shadow-md hover:border-primary/30 transition-all duration-300 flex flex-col items-center text-center cursor-pointer">
                        <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity">
                            <button class="text-text-muted hover:text-primary">
                                <span class="material-symbols-outlined">more_vert</span>
                            </button>
                        </div>
                        <div class="w-20 h-20 rounded-full bg-cover bg-center mb-4 ring-4 ring-background-light dark:ring-background-dark group-hover:ring-primary/20 transition-all" style='background-image: url("@user.Receiver.ImageUrl");'></div>
                        <h3 class="text-lg font-bold text-text-main dark:text-white mb-1">@user.Receiver.Name @user.Receiver.Surname</h3>
                        <p class="text-sm text-text-muted mb-4">@user.Receiver.Email</p>
                        <div class="flex gap-2 w-full mt-auto">
                            <a href="/Default/SendMessage?email=@user.Receiver.Email" class="flex-1 py-2 rounded-lg bg-primary-light/50 dark:bg-primary/10 text-primary-dark dark:text-primary text-sm font-semibold hover:bg-primary hover:text-text-main transition-colors text-center">
                                Mesaj Gönder
                            </a>
                            <a href="#" class="p-2 rounded-lg border border-gray-200 dark:border-gray-700 text-text-muted hover:text-text-main hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
                                <span class="material-symbols-outlined text-[20px]">person</span>
                            </a>
                        </div>
                    </div>
                }

                <div class="group relative bg-transparent rounded-2xl p-6 border-2 border-dashed border-gray-200 dark:border-gray-700 hover:border-primary hover:bg-primary/5 transition-all duration-300 flex flex-col items-center justify-center text-center cursor-pointer min-h-[280px]">
                    <a href="/Default/SendMessage" class="flex flex-col items-center">
                        <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mb-4 group-hover:bg-primary group-hover:text-text-main transition-colors text-primary-dark dark:text-primary">
                            <span class="material-symbols-outlined text-3xl">add</span>
                        </div>
                        <h3 class="text-lg font-bold text-text-main dark:text-white mb-1">Yeni Mesaj Gönder</h3>
                        <p class="text-sm text-text-muted">Listede olmayan birine yazın.</p>
                    </a>
                </div>
            </div>

            <div class="mt-10 p-1">
                <div class="flex flex-col md:flex-row items-center justify-between gap-6 rounded-2xl border border-primary/20 bg-gradient-to-r from-primary/10 to-transparent p-6 md:p-8">
                    <div class="flex items-center gap-4">
                        <div class="hidden md:flex h-12 w-12 items-center justify-center rounded-full bg-primary text-text-main">
                            <span class="material-symbols-outlined">bolt</span>
                        </div>
                        <div class="flex flex-col gap-1">
                            <p class="text-text-main dark:text-white text-lg font-bold leading-tight">Premium'a Yükselmek İster misin?</p>
                            <p class="text-text-muted text-base font-normal leading-normal">Daha fazla depolama alanı ve gelişmiş özellikler için planınızı yükseltin.</p>
                        </div>
                    </div>
                    <div class="flex w-full md:w-auto gap-3">
                        <button class="flex-1 md:flex-none min-w-[120px] cursor-pointer items-center justify-center rounded-xl h-10 px-6 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-text-main dark:text-white text-sm font-semibold hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                            Daha Fazla Bilgi
                        </button>
                        <button class="flex-1 md:flex-none min-w-[140px] cursor-pointer items-center justify-center rounded-xl h-10 px-6 bg-primary hover:bg-primary-dark text-text-main text-sm font-bold shadow-lg shadow-primary/20 transition-all">
                            Evet, İstiyorum
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black/40 backdrop-blur-sm p-4 hidden">
        <div class="bg-white dark:bg-surface-dark rounded-2xl shadow-2xl max-w-sm w-full overflow-hidden transform transition-all scale-100">
            <div class="p-6 text-center">
                <div class="mx-auto w-16 h-16 bg-primary/20 rounded-full flex items-center justify-center mb-4">
                    <span class="material-symbols-outlined text-primary-dark dark:text-primary text-3xl">mark_email_unread</span>
                </div>
                <h3 class="text-xl font-bold text-text-main dark:text-white mb-2">Hızlı Mesaj?</h3>
                <p class="text-text-muted mb-6">Bu kullanıcıya hemen yeni bir mesaj göndermek ister misiniz?</p>
                <div class="flex flex-col gap-3">
                    <button class="w-full h-11 bg-primary hover:bg-primary-dark text-text-main font-bold rounded-xl transition-colors">
                        Evet, Yazmaya Başla
                    </button>
                    <button class="w-full h-11 bg-transparent hover:bg-gray-100 dark:hover:bg-gray-800 text-text-muted font-medium rounded-xl transition-colors">
                        Vazgeç
                    </button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>