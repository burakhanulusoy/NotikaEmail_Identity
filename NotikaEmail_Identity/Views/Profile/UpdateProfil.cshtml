@using NotikaEmail_Identity.DTOs.UserDtos
@model UpdateUserDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Profilimi Güncelle</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#00c230",
                        "background-light": "#f5f8f6",
                        "background-dark": "#0f2314",
                    },
                    fontFamily: {
                        "display": ["Inter", "sans-serif"]
                    },
                    borderRadius: { "DEFAULT": "0.25rem", "lg": "0.5rem", "xl": "0.75rem", "full": "9999px" },
                },
            },
        }
    </script>
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark font-display min-h-screen flex flex-col">
    <div class="relative flex h-auto min-h-screen w-full flex-col overflow-x-hidden group/design-root text-slate-900 dark:text-slate-100">
        <header class="flex items-center justify-between whitespace-nowrap border-b border-primary/20 bg-white dark:bg-[#1a2e20] dark:border-[#2f4a35] px-10 py-3 shadow-sm sticky top-0 z-20">
            <div class="flex items-center gap-8">
                <div class="flex items-center gap-3 text-primary">
                    <div class="size-8 flex items-center justify-center bg-primary/10 rounded-lg">
                        <span class="material-symbols-outlined text-primary text-2xl">eco</span>
                    </div>
                    <h2 class="text-slate-900 dark:text-white text-xl font-bold leading-tight tracking-tight">Notika</h2>
                </div>
                <label class="flex flex-col min-w-40 !h-10 max-w-64 hidden md:flex">
                    <div class="flex w-full flex-1 items-stretch rounded-lg h-full bg-background-light dark:bg-[#25382b] border border-transparent focus-within:border-primary/50 transition-colors">
                        <div class="text-slate-500 dark:text-slate-400 flex items-center justify-center pl-4 rounded-l-lg border-r-0">
                            <span class="material-symbols-outlined text-xl">search</span>
                        </div>
                        <input class="flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg rounded-l-none border-none bg-transparent focus:ring-0 text-sm text-slate-900 dark:text-white placeholder:text-slate-400 px-3" placeholder="Search" value="" />
                    </div>
                </label>
            </div>
            <div class="flex flex-1 justify-end gap-6 items-center">
                <div class="flex gap-2">
                    <button class="flex size-10 cursor-pointer items-center justify-center rounded-full bg-background-light dark:bg-[#25382b] text-slate-600 dark:text-slate-300 hover:bg-primary/10 hover:text-primary transition-all">
                        <span class="material-symbols-outlined text-[20px]">search</span>
                    </button>
                    <button class="flex size-10 cursor-pointer items-center justify-center rounded-full bg-background-light dark:bg-[#25382b] text-slate-600 dark:text-slate-300 hover:bg-primary/10 hover:text-primary transition-all relative">
                        <span class="material-symbols-outlined text-[20px]">mail</span>
                        <span class="absolute top-2 right-2 size-2 bg-red-500 rounded-full border border-white dark:border-[#25382b]"></span>
                    </button>
                    <button class="flex size-10 cursor-pointer items-center justify-center rounded-full bg-background-light dark:bg-[#25382b] text-slate-600 dark:text-slate-300 hover:bg-primary/10 hover:text-primary transition-all">
                        <span class="material-symbols-outlined text-[20px]">notifications</span>
                    </button>
                </div>
                <div class="h-8 w-px bg-slate-200 dark:bg-slate-700 mx-2"></div>
                <button class="flex items-center gap-3 group cursor-pointer">
                    <div class="bg-center bg-no-repeat bg-cover rounded-full size-10 ring-2 ring-primary/20 group-hover:ring-primary transition-all" data-alt="User profile picture" style='background-image: url("@(Model?.ImageUrl ?? "https://via.placeholder.com/150")");'></div>
                    <div class="hidden lg:flex flex-col items-start">
                        <span class="text-sm font-semibold text-slate-900 dark:text-white leading-tight">@Model?.Name @Model?.Surname</span>
                        <span class="text-xs text-slate-500 dark:text-slate-400">Admin</span>
                    </div>
                    <span class="material-symbols-outlined text-slate-400 group-hover:text-primary transition-colors hidden lg:block">expand_more</span>
                </button>
            </div>
        </header>
        <main class="flex-1 w-full max-w-[1280px] mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <nav class="mb-8 border-b border-primary/20 dark:border-primary/10">
                <div class="flex gap-8 overflow-x-auto">
                    <a class="group flex items-center justify-center border-b-2 border-transparent pb-4 pt-2 px-1 hover:border-primary/30 transition-all" href="#">
                        <span class="material-symbols-outlined mr-2 text-slate-400 group-hover:text-primary transition-colors">home</span>
                        <span class="text-slate-500 dark:text-slate-400 font-medium text-sm group-hover:text-primary transition-colors">Ana Sayfa</span>
                    </a>
                    <a class="group flex items-center justify-center border-b-2 border-transparent pb-4 pt-2 px-1 hover:border-primary/30 transition-all" href="#">
                        <span class="material-symbols-outlined mr-2 text-slate-400 group-hover:text-primary transition-colors">mail</span>
                        <span class="text-slate-500 dark:text-slate-400 font-medium text-sm group-hover:text-primary transition-colors">Email</span>
                    </a>
                    <a class="flex items-center justify-center border-b-2 border-primary pb-4 pt-2 px-1" href="#">
                        <span class="material-symbols-outlined mr-2 text-primary">person</span>
                        <span class="text-primary font-bold text-sm">Profil</span>
                    </a>
                    <a class="group flex items-center justify-center border-b-2 border-transparent pb-4 pt-2 px-1 hover:border-primary/30 transition-all" href="#">
                        <span class="material-symbols-outlined mr-2 text-slate-400 group-hover:text-primary transition-colors">settings</span>
                        <span class="text-slate-500 dark:text-slate-400 font-medium text-sm group-hover:text-primary transition-colors">Ayarlar</span>
                    </a>
                </div>
            </nav>
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">

                <div class="lg:col-span-4 xl:col-span-3 flex flex-col gap-6">
                    <div class="bg-white dark:bg-[#1a2e20] rounded-2xl shadow-sm border border-slate-100 dark:border-[#2f4a35] overflow-hidden">
                        <div class="h-32 bg-gradient-to-r from-primary/20 to-emerald-200 dark:from-primary/10 dark:to-emerald-900/30"></div>
                        <div class="px-6 pb-6 -mt-16 flex flex-col items-center relative">
                            <div class="size-32 rounded-full border-4 border-white dark:border-[#1a2e20] shadow-md bg-center bg-cover mb-4 relative overflow-hidden" style='background-image: url("@(Model?.ImageUrl ?? "https://via.placeholder.com/150")");'></div>
                            <h2 class="text-xl font-bold text-slate-900 dark:text-white mb-1">@Model?.Name @Model?.Surname</h2>
                            <p class="text-sm font-medium text-primary mb-1">@Model?.Job</p>
                            <p class="text-sm text-slate-500 dark:text-slate-400 mb-6 text-center line-clamp-2">@Model?.AboutMe</p>
                            <div class="w-full space-y-4">
                                <div class="flex items-center justify-between py-3 border-t border-slate-100 dark:border-slate-800">
                                    <span class="text-sm font-medium text-slate-500 dark:text-slate-400">Üyelik Tarihi</span>
                                    <span class="text-sm font-semibold text-slate-900 dark:text-white">@Model?.CreatedDate.ToString("dd MMM yyyy")</span>
                                </div>
                                <div class="flex items-center justify-between py-3 border-t border-slate-100 dark:border-slate-800">
                                    <span class="text-sm font-medium text-slate-500 dark:text-slate-400">Konum</span>
                                    <span class="text-sm font-semibold text-slate-900 dark:text-white">@Model?.City</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="lg:col-span-8 xl:col-span-9">
                    <div class="bg-white dark:bg-[#1a2e20] rounded-2xl shadow-sm border border-slate-100 dark:border-[#2f4a35] overflow-hidden">
                        <div class="p-6 border-b border-slate-100 dark:border-[#2f4a35] flex items-center justify-between">
                            <div>
                                <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Profili Düzenle</h1>
                                <p class="text-slate-500 dark:text-slate-400 text-sm">Görünürlüğünüzü ve hesap ayarlarınızı buradan yönetin.</p>
                            </div>
                        </div>

                        <form  method="post" class="p-6 sm:p-8 space-y-8">

                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="CreatedDate" />

                            <div class="flex flex-col items-center justify-center space-y-6">
                                <div class="relative group">
                                    <div class="size-44 rounded-full border-2 border-dashed border-primary/40 bg-slate-50 dark:bg-slate-800/40 flex items-center justify-center transition-all group-hover:border-primary group-hover:bg-primary/5 overflow-hidden relative">
                                        <div class="absolute inset-0 bg-center bg-cover transition-opacity duration-300" style='background-image: url("@(Model?.ImageUrl ?? "https://via.placeholder.com/150")");'></div>
                                    </div>
                                </div>

                                <div class="w-full max-w-md space-y-2">
                                    <label class="text-sm font-semibold text-slate-700 dark:text-slate-200" asp-for="ImageUrl">Profil Fotoğrafı URL'si</label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <span class="material-symbols-outlined text-slate-400 text-[20px]">link</span>
                                        </div>
                                        <input asp-for="ImageUrl" type="url" placeholder="https://ornek.com/resim.jpg" class="block w-full pl-10 pr-3 py-3 border-slate-200 dark:border-slate-600 rounded-lg text-sm text-slate-900 dark:text-white placeholder-slate-400 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary bg-slate-50 dark:bg-slate-800/50 transition-all shadow-sm" />
                                    </div>
                                    <p class="text-[11px] text-slate-400 px-1">Şimdilik profil fotoğrafınızı bir web bağlantısı (URL) ile güncelleyebilirsiniz.</p>
                                </div>
                            </div>

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 pt-4 border-t border-slate-100 dark:border-slate-800">
                                <div class="space-y-2">
                                    <label class="text-sm font-semibold text-slate-700 dark:text-slate-200" asp-for="Name">Ad</label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <span class="material-symbols-outlined text-slate-400 text-[20px]">person</span>
                                        </div>
                                        <input asp-for="Name" type="text" class="block w-full pl-10 pr-3 py-3 border-slate-200 dark:border-slate-600 rounded-lg text-sm text-slate-900 dark:text-white focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary bg-slate-50 dark:bg-slate-800/50 transition-all shadow-sm" />
                                    </div>
                                </div>

                                <div class="space-y-2">
                                    <label class="text-sm font-semibold text-slate-700 dark:text-slate-200" asp-for="Surname">Soyad</label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <span class="material-symbols-outlined text-slate-400 text-[20px]">person</span>
                                        </div>
                                        <input asp-for="Surname" type="text" class="block w-full pl-10 pr-3 py-3 border-slate-200 dark:border-slate-600 rounded-lg text-sm text-slate-900 dark:text-white focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary bg-slate-50 dark:bg-slate-800/50 transition-all shadow-sm" />
                                    </div>
                                </div>

                                <div class="space-y-2">
                                    <label class="text-sm font-semibold text-slate-700 dark:text-slate-200" asp-for="Job">Meslek</label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <span class="material-symbols-outlined text-slate-400 text-[20px]">work</span>
                                        </div>
                                        <input asp-for="Job" type="text" class="block w-full pl-10 pr-3 py-3 border-slate-200 dark:border-slate-600 rounded-lg text-sm text-slate-900 dark:text-white focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary bg-slate-50 dark:bg-slate-800/50 transition-all shadow-sm" />
                                    </div>
                                </div>

                                <div class="space-y-2">
                                    <label class="text-sm font-semibold text-slate-700 dark:text-slate-200" asp-for="City">Şehir</label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <span class="material-symbols-outlined text-slate-400 text-[20px]">location_on</span>
                                        </div>
                                        <input asp-for="City" type="text" class="block w-full pl-10 pr-3 py-3 border-slate-200 dark:border-slate-600 rounded-lg text-sm text-slate-900 dark:text-white focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary bg-slate-50 dark:bg-slate-800/50 transition-all shadow-sm" />
                                    </div>
                                </div>

                                <div class="space-y-2">
                                    <label class="text-sm font-semibold text-slate-700 dark:text-slate-200" asp-for="PhoneNumber">Telefon</label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <span class="material-symbols-outlined text-slate-400 text-[20px]">call</span>
                                        </div>
                                        <input asp-for="PhoneNumber" type="tel" class="block w-full pl-10 pr-3 py-3 border-slate-200 dark:border-slate-600 rounded-lg text-sm text-slate-900 dark:text-white focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary bg-slate-50 dark:bg-slate-800/50 transition-all shadow-sm" />
                                    </div>
                                </div>

                                <div class="space-y-2 md:col-span-2">
                                    <label class="text-sm font-semibold text-slate-700 dark:text-slate-200" asp-for="Email">Email</label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <span class="material-symbols-outlined text-slate-400 text-[20px]">mail</span>
                                        </div>
                                        <input asp-for="Email" type="email" class="block w-full pl-10 pr-3 py-3 border-slate-200 dark:border-slate-600 rounded-lg text-sm text-slate-900 dark:text-white focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary bg-slate-50 dark:bg-slate-800/50 transition-all shadow-sm" />
                                    </div>
                                </div>
                            </div>

                            <div class="space-y-2">
                                <label class="text-sm font-semibold text-slate-700 dark:text-slate-200" asp-for="AboutMe">Hakkında</label>
                                <div class="relative">
                                    <div class="absolute top-3 left-3 flex items-start pointer-events-none">
                                        <span class="material-symbols-outlined text-slate-400 text-[20px]">description</span>
                                    </div>
                                    <textarea asp-for="AboutMe" rows="4" class="block w-full pl-10 pr-3 py-3 border-slate-200 dark:border-slate-600 rounded-lg text-sm text-slate-900 dark:text-white focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary bg-slate-50 dark:bg-slate-800/50 transition-all shadow-sm resize-none"></textarea>
                                </div>
                            </div>

                            <div class="pt-6 border-t border-slate-100 dark:border-slate-800 space-y-4">
                                <h3 class="text-base font-bold text-slate-900 dark:text-white flex items-center gap-2">
                                    <span class="material-symbols-outlined text-primary">share</span>
                                    Sosyal Medya
                                </h3>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <div class="space-y-2">
                                        <label class="text-sm font-semibold text-slate-700 dark:text-slate-200" asp-for="TwitterLink">Twitter (X)</label>
                                        <div class="relative">
                                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                <i class="fab fa-x-twitter text-slate-400 text-[18px]"></i>
                                            </div>
                                            <input asp-for="TwitterLink" placeholder="https://x.com/kullaniciadi" type="url" class="block w-full pl-10 pr-3 py-3 border-slate-200 dark:border-slate-600 rounded-lg text-sm text-slate-900 dark:text-white focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary bg-slate-50 dark:bg-slate-800/50 transition-all shadow-sm" />
                                        </div>
                                    </div>
                                    <div class="space-y-2">
                                        <label class="text-sm font-semibold text-slate-700 dark:text-slate-200" asp-for="GitHubLink">GitHub</label>
                                        <div class="relative">
                                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                <i class="fab fa-github text-slate-400 text-[18px]"></i>
                                            </div>
                                            <input asp-for="GitHubLink" placeholder="https://github.com/kullaniciadi" type="url" class="block w-full pl-10 pr-3 py-3 border-slate-200 dark:border-slate-600 rounded-lg text-sm text-slate-900 dark:text-white focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary bg-slate-50 dark:bg-slate-800/50 transition-all shadow-sm" />
                                        </div>
                                    </div>
                                    <div class="space-y-2">
                                        <label class="text-sm font-semibold text-slate-700 dark:text-slate-200" asp-for="LinkedlnLink">LinkedIn</label>
                                        <div class="relative">
                                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                <i class="fab fa-linkedin text-slate-400 text-[18px]"></i>
                                            </div>
                                            <input asp-for="LinkedlnLink" placeholder="https://linkedin.com/in/kullaniciadi" type="url" class="block w-full pl-10 pr-3 py-3 border-slate-200 dark:border-slate-600 rounded-lg text-sm text-slate-900 dark:text-white focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary bg-slate-50 dark:bg-slate-800/50 transition-all shadow-sm" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="flex flex-col sm:flex-row items-center justify-end gap-4 pt-6 border-t border-slate-100 dark:border-slate-800">
                                <div class="flex flex-col sm:flex-row gap-4 w-full sm:w-auto">
                                    <a href="/Profile/Index" class="w-full sm:w-auto px-6 py-3 rounded-lg text-sm font-bold text-slate-600 text-center dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">
                                        İptal
                                    </a>
                                    <button  class="w-full sm:w-auto px-10 py-3 rounded-lg bg-primary text-white text-sm font-bold shadow-lg shadow-primary/30 hover:bg-primary/90 hover:shadow-primary/40 hover:-translate-y-0.5 active:translate-y-0 transition-all flex items-center justify-center gap-2">
                                        <span class="material-symbols-outlined text-[20px]">save</span>
                                        Değişiklikleri Kaydet
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>