@model ChangePasswordViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Şifre Değiştir - Notika</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#00c292",
                        "background-light": "#f5f8f6",
                        "background-dark": "#0f2314",
                    },
                    fontFamily: {
                        "display": ["Inter", "sans-serif"]
                    },
                    borderRadius: {"DEFAULT": "0.375rem", "lg": "0.625rem", "xl": "1rem", "full": "9999px"},
                },
            },
        }
    </script>
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }

        input:focus, select:focus, textarea:focus {
            box-shadow: 0 0 0 4px rgba(0, 194, 146, 0.1) !important;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark font-display min-h-screen flex flex-col">
    <div class="relative flex h-auto min-h-screen w-full flex-col overflow-x-hidden group/design-root text-slate-900 dark:text-slate-100">
        <header class="flex items-center justify-between whitespace-nowrap border-b border-slate-200 bg-white dark:bg-[#1a2e20] dark:border-[#2f4a35] px-6 md:px-10 py-3 shadow-sm sticky top-0 z-20">
            <div class="flex items-center gap-8">
                <div class="flex items-center gap-3 text-primary">
                    <div class="size-8 flex items-center justify-center bg-primary/10 rounded-lg">
                        <span class="material-symbols-outlined text-primary text-2xl">eco</span>
                    </div>
                    <h2 class="text-slate-900 dark:text-white text-xl font-bold leading-tight tracking-tight">Notika</h2>
                </div>
            </div>
            <div class="flex items-center gap-6">
                <div class="hidden md:flex gap-4">
                    <a href="/Default/Inbox" class="flex size-10 cursor-pointer items-center justify-center rounded-full bg-slate-50 dark:bg-[#25382b] text-slate-600 dark:text-slate-300 hover:text-primary transition-all">
                        <span class="material-symbols-outlined text-[20px]">mail</span>
                    </a>
                    <a href="/Default/Inbox" class="flex size-10 cursor-pointer items-center justify-center rounded-full bg-slate-50 dark:bg-[#25382b] text-slate-600 dark:text-slate-300 hover:text-primary transition-all">
                        <span class="material-symbols-outlined text-[20px]">notifications</span>
                    </a>
                </div>
                <div class="h-8 w-px bg-slate-200 dark:bg-slate-700 mx-2 hidden md:block"></div>
                <button class="flex items-center gap-3 group cursor-pointer">
                    <div class="bg-center bg-no-repeat bg-cover rounded-full size-9 ring-2 ring-primary/20 group-hover:ring-primary transition-all" style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuCGqE2-ff-Wd-1gmZrCAbQvNjPbL38k5y_A7LKm5CPrPOKEbJtSJcXzlr3iEvJ8-WhaBgyqd1plevoWMqRvtxdhOid4Bz6VV6SD9zsSpKdDFLz5yWheB7fJYFkxGF9_QTJPdd4IMfSzdnzC6sqMp4JlxSy_bxE7jKRpI_0EJVaEFTHEx5RRKO9-lk9Bia1yxqqx7-jpNmug9o9_O1Np1l-_nQoZyU39d5XFBIQPXiyeNj4YZ5KAFxU7-QMlYfEO0YC4i1PgKXR8OhE");'></div>
                    <div class="hidden lg:flex flex-col items-start">
                        <span class="text-sm font-semibold text-slate-900 dark:text-white leading-tight">@ViewBag.name</span>
                        <span class="text-[11px] text-slate-500 dark:text-slate-400">@ViewBag.job</span>
                    </div>
                </button>
            </div>
        </header>
        <main class="flex-1 w-full max-w-[800px] mx-auto px-4 sm:px-6 lg:px-8 py-10 md:py-16">
            <div class="bg-white dark:bg-[#1a2e20] rounded-3xl shadow-xl shadow-slate-200/50 dark:shadow-none border border-slate-100 dark:border-[#2f4a35] overflow-hidden">
                <div class="px-8 pt-10 pb-8 border-b border-slate-50 dark:border-slate-800">
                    <div class="flex flex-col md:flex-row md:items-end justify-between gap-6">
                        <div>
                            <nav class="flex items-center gap-2 text-sm text-slate-400 mb-4">
                                <a class="hover:text-primary transition-colors" href="#">Ayarlar</a>
                                <span class="material-symbols-outlined text-xs">chevron_right</span>
                                <span class="text-slate-900 dark:text-slate-200 font-medium">Şifre Değiştir</span>
                            </nav>
                            <h1 class="text-3xl font-extrabold text-slate-900 dark:text-white tracking-tight">Şifreni Güncelle</h1>
                            <p class="text-slate-500 dark:text-slate-400 mt-2 text-lg">Hesap güvenliğini sağlamak için güçlü bir şifre belirle.</p>
                        </div>
                        <div class="flex items-center justify-center bg-primary/10 rounded-full p-4">
                            <span class="material-symbols-outlined text-primary text-4xl">lock_reset</span>
                        </div>
                    </div>
                </div>
                <div class="p-8 md:p-12">
                    <form method="post" class="space-y-8">
                        <div class="space-y-6 max-w-2xl mx-auto">
                            <div class="space-y-3">
                                <label class="text-[13px] uppercase tracking-wider font-bold text-slate-500 dark:text-slate-400" for="OldPassword">Mevcut Şifre</label>
                                <div class="relative group">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-400 group-focus-within:text-primary transition-colors">
                                        <span class="material-symbols-outlined text-[22px]">lock</span>
                                    </div>
                                    <input asp-for="OldPassword" id="OldPassword" class="block w-full pl-12 pr-12 py-4 border-slate-200 dark:border-slate-700 rounded-xl text-base text-slate-900 dark:text-white placeholder-slate-400 focus:outline-none focus:border-primary bg-slate-50 dark:bg-slate-800/40 transition-all" placeholder="Şu anki şifrenizi girin" type="password" />
                                    <button class="absolute inset-y-0 right-0 pr-4 flex items-center text-slate-400 hover:text-slate-600 dark:hover:text-slate-200 cursor-pointer" onclick="const input = document.getElementById('OldPassword'); input.type = input.type === 'password' ? 'text' : 'password';" type="button">
                                        <span class="material-symbols-outlined text-[20px]">visibility</span>
                                    </button>
                                </div>
                                <span asp-validation-for="OldPassword" class="text-red-500 text-sm font-semibold block mt-1"></span>
                            </div>

                            <div class="space-y-3">
                                <label class="text-[13px] uppercase tracking-wider font-bold text-slate-500 dark:text-slate-400" for="NewPassword">Yeni Şifre</label>
                                <div class="relative group">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-400 group-focus-within:text-primary transition-colors">
                                        <span class="material-symbols-outlined text-[22px]">lock</span>
                                    </div>
                                    <input asp-for="NewPassword" id="NewPassword" class="block w-full pl-12 pr-12 py-4 border-slate-200 dark:border-slate-700 rounded-xl text-base text-slate-900 dark:text-white placeholder-slate-400 focus:outline-none focus:border-primary bg-slate-50 dark:bg-slate-800/40 transition-all" placeholder="Yeni şifrenizi girin" type="password" />
                                    <button class="absolute inset-y-0 right-0 pr-4 flex items-center text-slate-400 hover:text-slate-600 dark:hover:text-slate-200 cursor-pointer" onclick="const input = document.getElementById('NewPassword'); input.type = input.type === 'password' ? 'text' : 'password';" type="button">
                                        <span class="material-symbols-outlined text-[20px]">visibility</span>
                                    </button>
                                </div>
                                <p class="text-xs text-slate-400 px-1">En az 8 karakter, bir büyük harf ve bir özel karakter içermelidir.</p>
                                <span asp-validation-for="NewPassword" class="text-red-500 text-sm font-semibold block mt-1"></span>
                            </div>

                            <div class="space-y-3">
                                <label class="text-[13px] uppercase tracking-wider font-bold text-slate-500 dark:text-slate-400" for="ConfirmPassword">Yeni Şifreyi Onayla</label>
                                <div class="relative group">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-400 group-focus-within:text-primary transition-colors">
                                        <span class="material-symbols-outlined text-[22px]">lock_clock</span>
                                    </div>
                                    <input asp-for="ConfirmPassword" id="ConfirmPassword" class="block w-full pl-12 pr-12 py-4 border-slate-200 dark:border-slate-700 rounded-xl text-base text-slate-900 dark:text-white placeholder-slate-400 focus:outline-none focus:border-primary bg-slate-50 dark:bg-slate-800/40 transition-all" placeholder="Yeni şifrenizi tekrar girin" type="password" />
                                    <button class="absolute inset-y-0 right-0 pr-4 flex items-center text-slate-400 hover:text-slate-600 dark:hover:text-slate-200 cursor-pointer" onclick="const input = document.getElementById('ConfirmPassword'); input.type = input.type === 'password' ? 'text' : 'password';" type="button">
                                        <span class="material-symbols-outlined text-[20px]">visibility</span>
                                    </button>
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm font-semibold block mt-1"></span>
                            </div>

                            <div class="text-red-500 text-sm font-medium">
                                @Html.ValidationSummary(true, "", new { @class = "p-3 mb-2 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg list-none" })
                            </div>

                        </div>
                        <div class="pt-10 border-t border-slate-50 dark:border-slate-800 flex flex-col sm:flex-row items-center justify-end gap-4">
                            <a href="/Profile/Index" class="w-full sm:w-auto px-8 py-4 rounded-xl text-base font-semibold text-slate-600 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-800 transition-all order-2 sm:order-1" >
                                Vazgeç
                            </a>
                            <button type="submit" class="w-full sm:w-auto px-12 py-4 rounded-xl bg-primary text-white text-base font-bold shadow-lg shadow-primary/25 hover:bg-primary/90 hover:-translate-y-0.5 active:translate-y-0 transition-all flex items-center justify-center gap-3 order-1 sm:order-2">
                                <span class="material-symbols-outlined text-[22px]">key</span>
                                Şifreyi Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="mt-8 flex flex-col md:flex-row items-center justify-between text-slate-400 text-sm px-4">
                <p>© 2023 Notika Dash. Tüm hakları saklıdır.</p>
                <div class="flex gap-6 mt-4 md:mt-0">
                    <a class="hover:text-primary" href="#">Gizlilik Politikası</a>
                    <a class="hover:text-primary" href="#">Yardım Merkezi</a>
                </div>
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>