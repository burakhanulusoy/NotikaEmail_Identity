@model UpdateUserDto

@{
    Layout = null;
    ViewData["Title"] = "MyProfile";

}


<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Profilim</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#00c230",
                        "background-light": "#f5f8f6",
                        "background-dark": "#0f2314",
                    },
                    fontFamily: {
                        "display": ["Inter", "sans-serif"]
                    },
                    borderRadius: {"DEFAULT": "0.25rem", "lg": "0.5rem", "xl": "0.75rem", "full": "9999px"},
                },
            },
        }
    </script>
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark font-display min-h-screen flex flex-col">
    <div class="relative flex h-auto min-h-screen w-full flex-col overflow-x-hidden group/design-root text-slate-900 dark:text-slate-100">
        <!-- Header -->
        <header class="flex items-center justify-between whitespace-nowrap border-b border-primary/20 bg-white dark:bg-[#1a2e20] dark:border-[#2f4a35] px-10 py-3 shadow-sm sticky top-0 z-20">
            <div class="flex items-center gap-8">
                <div class="flex items-center gap-3 text-primary">
                    <div class="size-8 flex items-center justify-center bg-primary/10 rounded-lg">
                        <span class="material-symbols-outlined text-primary text-2xl">eco</span>
                    </div>
                    <h2 class="text-slate-900 dark:text-white text-xl font-bold leading-tight tracking-tight">Notika</h2>
                </div>
                <label class="flex flex-col min-w-40 !h-10 max-w-64 hidden md:flex">
                    <div class="flex w-full flex-1 items-stretch rounded-lg h-full bg-background-light dark:bg-[#25382b] border border-transparent focus-within:border-primary/50 transition-colors">
                        <div class="text-slate-500 dark:text-slate-400 flex items-center justify-center pl-4 rounded-l-lg border-r-0">
                            <span class="material-symbols-outlined text-xl">search</span>
                        </div>
                        <input class="flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg rounded-l-none border-none bg-transparent focus:ring-0 text-sm text-slate-900 dark:text-white placeholder:text-slate-400 px-3" placeholder="Search" value="" />
                    </div>
                </label>
            </div>
        </header>
        <!-- Main Content Wrapper -->
        <main class="flex-1 w-full max-w-[1280px] mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <!-- Secondary Nav -->
            <nav class="mb-8 border-b border-primary/20 dark:border-primary/10">
                <div class="flex gap-8 overflow-x-auto">
                    <a class="group flex items-center justify-center border-b-2 border-transparent pb-4 pt-2 px-1 hover:border-primary/30 transition-all" href="#">
                        <span class="material-symbols-outlined mr-2 text-slate-400 group-hover:text-primary transition-colors">home</span>
                        <span class="text-slate-500 dark:text-slate-400 font-medium text-sm group-hover:text-primary transition-colors">Ana Sayfa</span>
                    </a>
                    <a class="group flex items-center justify-center border-b-2 border-transparent pb-4 pt-2 px-1 hover:border-primary/30 transition-all" href="#">
                        <span class="material-symbols-outlined mr-2 text-slate-400 group-hover:text-primary transition-colors">mail</span>
                        <span class="text-slate-500 dark:text-slate-400 font-medium text-sm group-hover:text-primary transition-colors">Email Gönder</span>
                    </a>
                    <a class="flex items-center justify-center border-b-2 border-primary pb-4 pt-2 px-1" href="#">
                        <span class="material-symbols-outlined mr-2 text-primary">person</span>
                        <span class="text-primary font-bold text-sm">Profilim</span>
                    </a>
                    <a class="group flex items-center justify-center border-b-2 border-transparent pb-4 pt-2 px-1 hover:border-primary/30 transition-all" href="#">
                        <span class="material-symbols-outlined mr-2 text-slate-400 group-hover:text-primary transition-colors">settings</span>
                        <span class="text-slate-500 dark:text-slate-400 font-medium text-sm group-hover:text-primary transition-colors">Şifre Değiştir</span>
                    </a>
                </div>
            </nav>










            <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">
                <!-- Left Column: Profile Card -->
                <div class="lg:col-span-4 xl:col-span-3 flex flex-col gap-6">
                    <div class="bg-white dark:bg-[#1a2e20] rounded-2xl shadow-sm border border-slate-100 dark:border-[#2f4a35] overflow-hidden">
                        <div class="h-32 bg-gradient-to-r from-primary/20 to-emerald-200 dark:from-primary/10 dark:to-emerald-900/30"></div>
                        <div class="px-6 pb-6 -mt-16 flex flex-col items-center relative">
                            <div class="size-32 rounded-full border-4 border-white dark:border-[#1a2e20] shadow-md bg-center bg-cover mb-4 relative group cursor-pointer" data-alt="Profile photo" style='background-image: url("@Model.ImageUrl");'>
                                <div class="absolute inset-0 bg-black/40 rounded-full opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                                    <span class="material-symbols-outlined text-white">edit</span>
                                </div>
                            </div>
                            <h2 class="text-xl font-bold text-slate-900 dark:text-white mb-1">@Model.Name @Model.Surname</h2>
                            <p class="text-sm font-medium text-primary mb-1">@Model.Job</p>
                            <p class="text-sm text-slate-500 dark:text-slate-400 mb-6">@Model.Email</p>
                            <div class="w-full flex justify-center gap-3 mb-6">
                                <a target="_blank" href="@Model.TwitterLink" class="p-2 rounded-full bg-slate-50 dark:bg-[#25382b] text-slate-600 dark:text-slate-300 hover:bg-primary hover:text-white transition-colors">
                                    <svg aria-hidden="true" class="size-5" fill="currentColor" viewbox="0 0 24 24"><path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path></svg>
                                </a>
                                <a target="_blank" href="@Model.GitHubLink" class="p-2 rounded-full bg-slate-50 dark:bg-[#25382b] text-slate-600 dark:text-slate-300 hover:bg-primary hover:text-white transition-colors">
                                    <svg aria-hidden="true" class="size-5" fill="currentColor" viewbox="0 0 24 24"><path clip-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" fill-rule="evenodd"></path></svg>
                                </a>
                                <a target="_blank" href="@Model.LinkedlnLink" class="p-2 rounded-full bg-slate-50 dark:bg-[#25382b] text-slate-600 dark:text-slate-300 hover:bg-primary hover:text-white transition-colors">
                                    <svg aria-hidden="true" class="size-5" fill="currentColor" viewbox="0 0 24 24"><path clip-rule="evenodd" d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" fill-rule="evenodd"></path></svg>
                                </a>
                            </div>
                            <div class="w-full space-y-4">
                                
                                <div class="flex items-center justify-between py-3 border-t border-slate-100 dark:border-slate-800">
                                    <span class="text-sm font-medium text-slate-500 dark:text-slate-400">Katılma Tarihiniz</span>
                                    <span class="text-sm font-semibold text-slate-900 dark:text-white">@Model.CreatedDate.ToString("dd MMMM dddd")</span>
                                </div>
                                <div class="flex items-center justify-between py-3 border-t border-slate-100 dark:border-slate-800">
                                    <span class="text-sm font-medium text-slate-500 dark:text-slate-400">Konum</span>
                                    <span class="text-sm font-semibold text-slate-900 dark:text-white">@Model.City</span>
                                </div>
                            </div>
                        </div>
                    </div>
                 </div>
                <!-- Right Column: Edit Profile Form -->
                <div class="lg:col-span-8 xl:col-span-9">
                    <div class="bg-white dark:bg-[#1a2e20] rounded-2xl shadow-sm border border-slate-100 dark:border-[#2f4a35] p-6 sm:p-8">
                        <div class="flex items-center justify-between mb-8">
                            <div>
                                <h1 class="text-2xl font-bold text-slate-900 dark:text-white mb-2">Profiliniz</h1>
                                <p class="text-slate-500 dark:text-slate-400 text-sm">Kişisel bilgilerinizi ve profil detaylarınızı güncelleyebiirsiniz.</p>
                            </div>
                            <button class="hidden sm:flex text-sm text-slate-500 dark:text-slate-400 hover:text-primary items-center gap-1">
                                <span class="material-symbols-outlined text-lg">history</span>
                            </button>
                        </div>
                        <form class="space-y-6">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div class="space-y-2">
                                    <label class="text-sm font-semibold text-slate-700 dark:text-slate-200" for="fullName">Ad Soyad</label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <span class="material-symbols-outlined text-slate-400 text-[20px]">person</span>
                                        </div>
                                        <input class="block w-full pl-10 pr-3 py-3 border-slate-200 dark:border-slate-600 rounded-lg text-sm text-slate-900 dark:text-white placeholder-slate-400 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary bg-slate-50 dark:bg-slate-800/50 transition-all shadow-sm" id="fullName" type="text" value="@Model.Name @Model.Surname" />
                                    </div>
                                </div>
                                <div class="space-y-2">
                                    <label class="text-sm font-semibold text-slate-700 dark:text-slate-200" for="city">Şehir</label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <span class="material-symbols-outlined text-slate-400 text-[20px]">location_on</span>
                                        </div>
                                        <input value="@Model.City" class="block w-full pl-10 pr-10 py-3 border-slate-200 dark:border-slate-600 rounded-lg text-sm text-slate-900 dark:text-white focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary bg-slate-50 dark:bg-slate-800/50 transition-all shadow-sm appearance-none" id="city" />
                                            
                                        
                                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                            <span class="material-symbols-outlined text-slate-400 text-[20px]">expand_more</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div class="space-y-2">
                                    <label class="text-sm font-semibold text-slate-700 dark:text-slate-200" for="phone">Telefon</label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <span class="material-symbols-outlined text-slate-400 text-[20px]">call</span>
                                        </div>
                                        <input class="block w-full pl-10 pr-3 py-3 border-slate-200 dark:border-slate-600 rounded-lg text-sm text-slate-900 dark:text-white placeholder-slate-400 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary bg-slate-50 dark:bg-slate-800/50 transition-all shadow-sm" id="phone" type="tel" value="@Model.PhoneNumber" />
                                    </div>
                                </div>
                                <div class="space-y-2">
                                    <label class="text-sm font-semibold text-slate-700 dark:text-slate-200" for="email">Email</label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <span class="material-symbols-outlined text-slate-400 text-[20px]">mail</span>
                                        </div>
                                        <input class="block w-full pl-10 pr-3 py-3 border-slate-200 dark:border-slate-600 rounded-lg text-sm text-slate-900 dark:text-white placeholder-slate-400 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary bg-slate-50 dark:bg-slate-800/50 transition-all shadow-sm" id="email" type="email" value="@Model.Email" />
                                    </div>
                                </div>
                            </div>
                            <div class="space-y-2">
                                <label class="text-sm font-semibold text-slate-700 dark:text-slate-200" for="bio">Hakkımda</label>
                                <div class="relative">
                                    <div class="absolute top-3 left-3 flex items-start pointer-events-none">
                                        <span class="material-symbols-outlined text-slate-400 text-[20px]">description</span>
                                    </div>
<textarea class="block w-full pl-10 pr-3 py-3 border-slate-200 dark:border-slate-600 rounded-lg text-sm text-slate-900 dark:text-white placeholder-slate-400 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary bg-slate-50 dark:bg-slate-800/50 transition-all shadow-sm resize-none" id="bio" rows="4">@Model.AboutMe</textarea>
                                </div>
                            </div>
                            <hr class="border-slate-100 dark:border-slate-700 my-8" />
                            <div class="flex flex-col sm:flex-row items-center justify-end gap-4">
                                <a href="" class="w-full sm:w-auto px-6 py-3 rounded-lg text-sm font-bold text-slate-600 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors" type="button">
                                    Çıkış Yap
                                </a>
                                <a href="/Profile/UpdateProfil" class="w-full sm:w-auto px-8 py-3 rounded-lg bg-primary text-white text-sm font-bold shadow-lg shadow-primary/30 hover:bg-primary/90 hover:shadow-primary/40 hover:-translate-y-0.5 active:translate-y-0 transition-all flex items-center justify-center gap-2" type="button">
                                    <span class="material-symbols-outlined text-[20px]">save</span>
                                    Profilimi Düzenle
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>